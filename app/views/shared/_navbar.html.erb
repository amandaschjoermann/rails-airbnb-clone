<div class="navigation-container">
  <div class="navbar-wagon">
    <!-- Logo -->

    <%= link_to root_path class: "navbar-wagon-brand" do %>
      <%= image_tag 'mountain-logo.png', class: "navbar-logo" %>
    <% end %>

    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <%= link_to 'Rent out', "#", class: "active navbar-wagon-item navbar-wagon-link" %>

      <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to 'Dashboard', "#", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to 'Log Out', "#", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
          </ul>
        </div>
      </div>
      <% else %>
        <%= link_to 'Sign Up', "#", class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to 'Sign In', "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>
