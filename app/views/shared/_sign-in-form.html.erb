<div class="container">
  <h3>Log In</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "Email: ", placeholder: "youremail@example.com", required: false, autofocus: true %>
    <%= f.input :password, label: "Password: ", required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions form-container">
    <div>
      <%= f.button :submit, "Log in", :class => "form-button" %>
    </div>
    <% end %>
    <div>
      <button class="form-button"><%= link_to "Forgot your password?", new_password_path(resource_name) %></button>
    </div>
    <div class="push">
      <button class="form-button"><%= link_to "Sign up", new_registration_path(resource_name) %></button>
    </div>
  </div>
</div>


