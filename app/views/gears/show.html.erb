<div class="gear-show-container">
  <div id="roevsnaps" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item small active">
        <img class="gear-image" src="https://images.unsplash.com/photo-1517823382935-51bfcb0ec6bc?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8b5c8bafdf01d553be4108029d2ed058&auto=format&fit=crop&w=1350&q=80" alt="First slide">
      </div>
      <div class="carousel-item small">
        <img class="gear-image" src="https://images.unsplash.com/photo-1517823382935-51bfcb0ec6bc?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8b5c8bafdf01d553be4108029d2ed058&auto=format&fit=crop&w=1350&q=80" alt="Second slide">
      </div>
      <div class="carousel-item small">
        <img class="gear-image" src="https://images.unsplash.com/photo-1517823382935-51bfcb0ec6bc?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8b5c8bafdf01d553be4108029d2ed058&auto=format&fit=crop&w=1350&q=80" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#roevsnaps" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#roevsnaps" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="detail-page-wrapper">

    <h4 class="category-detail"><%= @gear.category %></h4>
    <h1 class="name-detail"><%= @gear.name %></h1>
    <ul class="icon-detail-list list-inline">
      <li class="list-inline-item"><i class="icon-detail fas fa-dollar-sign"></i><%= @gear.price %></li>
      <li class="list-inline-item"><i class="icon-detail fas fa-star"></i>
        <%= @gear.rating %></li>
      </ul>
      <div class="description-wrapper">
        <p class="description-detail"><%= @gear.description %></p>
        <p class="description-detail"><%= @gear.address %></p>
      </div>


      <div class="booking-wrapper">

        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <h2>Book Now</h2>

          <%= simple_form_for([@gear, @booking]) do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Book", class: "btn btn-primary" %>
          <% end %>
        </div>

      </div>
      <div class="detail-top"></div>
    </div>
  </div>
