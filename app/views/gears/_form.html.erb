<!-- [...] all the fields -->
<%= simple_form_for(@gear) do |f| %>

<% if @gear.errors.any? %>
<div class="errors-container">
  <ul>
    <% @gear.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group name">
  <%= f.text_field :name, class: 'form-control name', placeholder: "Name" %>
</div>

<div class="form-group address">
  <%= f.text_field :address, class: 'form-control address', placeholder: "Address" %>
</div>

<div class="form-group category">
  <%= f.input :category, collection: %w[In-Water Above-Ground On-Land], class: 'form-control category', label: "Choose category" %>
</div>

<div class="form-group description">
  <%= f.input :description, as: :text, class: 'form-control description', label: false, placeholder: "Add a description" %>
</div>

<div class="form-group price">
  <%= f.number_field :price, class: 'form-control price', placeholder: "Price: DKK / Day" %>
</div>

<%= f.submit class: 'btn create-gear' %>
<% end %>
